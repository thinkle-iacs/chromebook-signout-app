{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@data/*": ["src/data/*"],
      "@components/*": ["src/ui/components/*"],
      "@notifications/*": ["src/ui/notifications/*"],
      "@assets/*": ["src/ui/assets/*"],
      "@people/*": ["src/ui/people/*"],
      "@googleAdmin/*": ["src/ui/googleAdmin/*"],
      "@contracts/*": ["src/ui/contracts/*"],
      "@history/*": ["src/ui/history/*"],
      "@auth/*": ["src/ui/auth/*"],
      "@utils/*": ["src/ui/utils/*"],
      "@ui/*": ["src/ui/*"],
      "@tickets/*": ["src/ui/tickets/*"],
      "@scheduling/*": ["src/ui/scheduling/*"]
    }
  },
  "include": ["src/**/*", "ui/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}
