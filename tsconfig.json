{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@data/*": ["data/*"],
      "@components/*": ["ui/components/*"],
      "@notifications/*": ["ui/notifications/*"],
      "@assets/*": ["ui/assets/*"],
      "@people/*": ["ui/people/*"],
      "@googleAdmin/*": ["ui/googleAdmin/*"],
      "@contracts/*": ["ui/contracts/*"],
      "@history/*": ["ui/history/*"],
      "@auth/*": ["ui/auth/*"],
      "@utils/*": ["ui/utils/*"],
      "@ui/*": ["ui/*"],
      "@tickets/*": ["ui/tickets/*"],
      "@scheduling/*": ["ui/scheduling/*"]
    }
  },
  "include": ["src/**/*", "ui/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}
